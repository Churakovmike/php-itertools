{
    "name": "churakovmike/php-itertools",
    "type": "library",
    "description": "PHP itertools library",
    "keywords": [
        "itertools",
        "php itertools"
    ],
    "license": "MIT",
    "minimum-stability": "dev",
    "authors": [
        {
            "name": "Churakov Mike",
            "email": "churakovmike@mail.ru",
            "role": "Developer"
        }
    ],
    "support": {
        "email": "churakovmike@mail.ru"
    },
    "require": {
        "php": "^7.0"
    },
    "autoload": {
        "files": ["src/function.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "require-dev": {
        "phpunit/phpunit": "^9.3@dev"
    },
    "scripts": {
        "run:unit": [
            "phpunit ./tests"
        ],
        "run:coverage": [
            "phpunit --configuration phpunit.xml --coverage-text"
        ]
    }
}
